package services;

import db.NewsDaoTest;
import db.exceptions.DaoException;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import org.springframework.transaction.annotation.Transactional;
import pojos.News;

import java.io.Serializable;
import java.util.List;

@Service
@Transactional
public class NewsServiceTest {
    @Autowired
    private NewsDaoTest newsDaoTest;

    public int countAllNews() {
        return newsDaoTest.countAllNews();
    }
    public void saveOrUpdate(News news) {
        try {
            newsDaoTest.saveOrUpdate(news);
        } catch (DaoException e) {
            e.printStackTrace();
        }
    }
    public News get(Serializable id) {
        try {
            return newsDaoTest.get(id);
        } catch (DaoException e) {
            e.printStackTrace();
        }
        return null;
    }
    public News load(Serializable id) {
        try {
            return newsDaoTest.load(id);
        } catch (DaoException e) {
            e.printStackTrace();
        }
        return null;
    }
    public void delete(News news) {
        try {
            newsDaoTest.delete(news);
        } catch (DaoException e) {
            e.printStackTrace();
        }
    }
    public List<News> getNewsList(int selectedPage, int newsOnPage, String sortBy) {
        return newsDaoTest.getNewsList(selectedPage, newsOnPage, sortBy);
    }












}