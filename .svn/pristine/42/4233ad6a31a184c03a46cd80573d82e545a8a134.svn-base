package controllers;

import org.springframework.stereotype.Controller;
import org.springframework.ui.ModelMap;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;

@Controller
public class MainController {
    @RequestMapping(value = "/welcome", method = RequestMethod.GET)
    public String welcomePage (ModelMap modelMap) {
        modelMap.addAttribute("greetings", "Hello, Andrew. SpringMVC is working");
        return "welcome";
    }

    @RequestMapping (value = "/greetings", method = RequestMethod.GET)
    public String greetPage (ModelMap modelMap) {
        modelMap.addAttribute("greet", "Hello, java is working perfectly");
        return "greetings";
    }

}
