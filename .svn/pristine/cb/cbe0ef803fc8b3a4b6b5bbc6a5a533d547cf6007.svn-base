package services;

import db.NewsDao;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import org.springframework.transaction.annotation.Transactional;
import pojos.News;

import java.util.List;

@Transactional
@Service
public class NewsService extends BaseService<News> implements INewsService<News> {

    private NewsDao newsDao;

    public NewsService() {
    }
    @Autowired
    public NewsService(NewsDao newsDao) {
        this.newsDao = newsDao;
    }

    public List<News> getNewsList(int selectedPage, int newsOnPage) {
        return newsDao.getNewsList(selectedPage, newsOnPage);
    }

    public int countAllNews() {return newsDao.countAllNews();
    }
}
